# =============================================================================
# Frappe VPS Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Hetzner Cloud (for Terraform)
# -----------------------------------------------------------------------------
HCLOUD_TOKEN=your-hetzner-api-token

# -----------------------------------------------------------------------------
# Docker Registry
# -----------------------------------------------------------------------------
DOCKER_USERNAME=your-docker-username
DOCKER_HUB_TOKEN=your-docker-hub-token
KAMAL_REGISTRY_PASSWORD=your-docker-hub-token

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
DEPLOY_HOST=your-server-ip
SSH_KEY_PATH=~/.ssh/id_rsa

# -----------------------------------------------------------------------------
# ERPNext Site Configuration
# -----------------------------------------------------------------------------
SITE_NAME=erp.yourdomain.com

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
MARIADB_ROOT_PASSWORD=secure-root-password-here

# -----------------------------------------------------------------------------
# ERPNext Admin
# -----------------------------------------------------------------------------
ADMIN_PASSWORD=secure-admin-password-here

# -----------------------------------------------------------------------------
# Encryption Key (generate with: openssl rand -base64 32)
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=your-encryption-key-here

# -----------------------------------------------------------------------------
# Optional: S3 Backup Configuration
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# RESTIC_REPOSITORY=s3:s3.amazonaws.com/your-bucket/backups
# RESTIC_PASSWORD=your-restic-password
